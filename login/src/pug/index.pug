html(lang="en")
    head
        title Page title
        meta(charset="utf-8")
        meta(name="viewport", content="width=device-width, initial-scale=1, shrink-to-fit=no")
        link(rel="preconnect", href="https://fonts.gstatic.com")
        link(rel="stylesheet", href="css/tailwind/tailwind.min.css")
        link(rel="icon", type="image/png", sizes="32x32", href="shuffle-for-tailwind.png")
        script(src="js/main.js")
    body(class="antialiased bg-body text-body font-body")
        div(class="")
            section(class="py-20")
                div(class="container px-4 mx-auto")
                    div(class="max-w-md mx-auto py-12 px-8 bg-gray-50 rounded-lg text-center")
                        span(class="text-sm text-gray-500 font-semibold uppercase") Sign Up
                        h3(class="mb-8 text-3xl font-bold font-heading") Create new account
                        form(action="#")
                            div(class="flex flex-wrap md:flex-nowrap")
                                input(class="w-full md:w-1/2 md:mr-2 py-3 pl-3 mb-4 bg-white rounded-lg", type="text", placeholder="First Name")
                                input(class="w-full md:w-1/2 py-3 pl-3 mb-4 bg-white rounded-lg", type="text", placeholder="Last Name")
                            input(class="w-full py-3 pl-3 mb-4 bg-white rounded-lg", type="email", placeholder="E-mail address")
                            input(class="w-full py-3 pl-3 mb-4 bg-white rounded-lg", type="password", placeholder="Password")
                            label(class="inline-block mb-4")
                                input(class="mr-1", type="checkbox", name="terms", value="1")
                                span(class="text-sm text-gray-500")
                                    | By signing up, you agree to our 
                                    a(class="font-bold hover:underline", href="#") Terms, Data Policy
                                    |  and 
                                    a(class="font-bold hover:underline", href="#") Cookies Policy
                                    | .
                            button(class="block w-full mb-4 px-5 py-3 text-sm bg-indigo-500 hover:bg-indigo-600 text-white font-semibold border border-indigo-500 hover:border-indigo-600 rounded transition duration-200") Sign Up
                        p(class="text-sm text-gray-500")
                            span Already have an account?
                            |               
                            a(class="font-bold hover:underline", href="#") Sign In
